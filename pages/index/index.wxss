/* 轮播图 */
swiper {
  position: relative;
  margin: 0rpx 0rpx 40rpx;
  width: 100%;
  height: 400rpx;
  background: #fff;
  border-radius: 1em;
}

swiper image {
  display: block;
  width: 94%;
  height: 400rpx;
  margin: 0rpx auto;
  border-radius: 1em;
}

.swiper-desc {
  height: 160rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
  line-height: 130rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
}

