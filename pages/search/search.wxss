 .list-container {
  height: 100%;
  margin-top:20rpx;
}

/* 搜索 */
.search-head {
  font-size: 30rpx;
  text-align: center;
  color: #898989;
}
.search-head image {
  display: block;
  margin: 0 auto;
  width: 500rpx;
  height: 380rpx;
}

.search-head-wd {
  display: block;
  margin: 0 auto;
  width: 420rpx;
  height: 18rpx;
  background: linear-gradient(270deg,rgba(249,228,135,0) 0%,rgb(98, 125, 243) 100%);
  border-radius: 13rpx;
}


.search-box {
  display: flex;
  flex-direction: row;
  margin-top: 60rpx; 
  padding: 24rpx;
  overflow: hidden;
}

.search-box image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}

.search-button {
  width: 20%;
  border-left: 0 !important;
  border-top: 1px solid #999 !important;
  border-right: 1px solid #999 !important;
  border-bottom: 1px solid #999 !important;
  background-color: #fff !important;
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
  border-top-right-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  margin: 0;
}

.search-button icon {
  margin-top: 40rpx;
  margin-left: 40rpx;
}

.search-input {
  width: 80%;
  background-color: #fff;
  padding: 32rpx 0 32rpx 32rpx;
  min-height: 1rem;
  font-size: 28rpx;
  border-bottom-left-radius: 80rpx;
  border-top-left-radius: 80rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  border-right: 0;
  border-right: 0 !important;
  border-top: 1px solid #999 !important;
  border-left: 1px solid #999 !important;
  border-bottom: 1px solid #999 !important;
  background-color: #fff !important;
}
